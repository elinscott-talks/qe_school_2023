@article{Li2019,
  title = {High-{{Throughput Screening}} for {{Advanced Thermoelectric Materials}}: {{Diamond-Like ABX2 Compounds}}},
  shorttitle = {High-{{Throughput Screening}} for {{Advanced Thermoelectric Materials}}},
  author = {Li, Ruoxi and Li, Xin and Xi, Lili and Yang, Jiong and Singh, David J. and Zhang, Wenqing},
  year = {2019},
