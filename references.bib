@article{Kronik2012,
  title = {Excitation {{Gaps}} of {{Finite-Sized Systems}} from {{Optimally Tuned Range-Separated Hybrid Functionals}}},
  author = {Kronik, Leeor and Stein, Tamar and {Refaely-Abramson}, Sivan and Baer, Roi},
  year = {2012},
