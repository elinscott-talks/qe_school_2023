  urldate = {2022-09-30},
  abstract = {Semilocal density functional approximations for the exchange-correlation energy can improperly dissociate a neutral molecule  {$\mathsl{X}\mathsl{Y}$} XY   ({$\mathsl{Y}\neq\mathsl{X}$}) (Y{$\neq$}X)  to fractionally charged fragments  {$\mathsl{X}$} +{$\mathsl{q}$} {$\cdots$} {$\mathsl{Y}$} -{$\mathsl{q}$} X+q{$\cdots$}Y-q  with an energy significantly lower than  {$\mathsl{X}$} 0 {$\cdots$} {$\mathsl{Y}$} 0 X0{$\cdots$}Y0 . For example, NaCl can dissociate to  Na +0.4 {$\cdots$} Cl -0.4 Na+0.4{$\cdots$}Cl-0.4 . Generally,  {$\mathsl{q}$} q  is positive when the lowest-unoccupied orbital energy of atom  {$\mathsl{Y}$} 0 Y0  lies below the highest-occupied orbital energy of atom  {$\mathsl{X}$} 0 X0 . The first 24 open  {$\mathsl{s}\mathsl{p}$} sp -shell atoms of the Periodic Table can form 276 distinct unlike pairs  {$\mathsl{X}\mathsl{Y}$} XY , and in the local spin density approximation 174 of these display fractional-charge dissociation. Finding these lowest-energy solutions with standard quantum chemistry codes, however, requires special care. Self-interaction-corrected (SIC) semilocal approximations are exact for one-electron systems and also reduce the spurious fractional charge  {$\mathsl{q}$} q . The original SIC of Perdew and Zunger typically reduces  {$\mathsl{q}$} q  to 0. A scaled-down SIC with better equilibrium properties sometimes fails to reduce  {$\mathsl{q}$} q  all the way to 0. The desideratum of ``many-electron self-interaction freedom'' is introduced as a generalization of the one-electron concept.}
}

@article{Ruzsinszky2007,
