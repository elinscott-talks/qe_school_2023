  issn = {1948-7185, 1948-7185},
  doi = {10.1021/acs.jpclett.1c01962},
  urldate = {2021-12-16},
  abstract = {We develop a second-order correction to commonly used density functional approximations (DFAs) to eliminate the systematic delocalization error. The method, based on the previously developed global scaling correction (GSC), is an exact quadratic correction to the DFA for the fractional charge behavior and uses the analytical second derivatives of the total energy with respect to fractional occupation numbers of the canonical molecular orbitals. For small and medium-size molecules, this correction leads to ground-state orbital energies that are a highly accurate approximation to the corresponding quasiparticle energies. It provides excellent predictions of ionization potentials, electron affinities, photoemission spectrum, and photoexcitation energies beyond previous approximate second-order approaches, thus showing potential for broad applications in computational spectroscopy.},
  langid = {english}
}

@article{Mei2022,
