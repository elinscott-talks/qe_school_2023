@article{Morton2018,
  title = {Structured Near-Infrared Magnetic Circular Dichroism Spectra of the {{Mn4CaO5}} Cluster of {{PSII}} in {{T}}. Vulcanus Are Dominated by {{Mn}}({{IV}}) d-d `Spin-Flip' Transitions},
