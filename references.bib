@article{Vydrov2006,
  title = {Scaling down the {{Perdew-Zunger}} Self-Interaction Correction in Many-Electron Regions},
  author = {Vydrov, Oleg A. and Scuseria, Gustavo E. and Perdew, John P. and Ruzsinszky, Adrienn and Csonka, G{\'a}bor I.},
  year = {2006},
