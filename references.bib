@article{Roos1980a,
  title = {A Complete Active Space {{SCF}} Method ({{CASSCF}}) Using a Density Matrix Formulated Super-{{CI}} Approach},
  author = {Roos, Bj{\"o}rn O. and Taylor, Peter R. and Siegbahn, Per E.M.},
