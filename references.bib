@article{Ohad2022,
  title = {Band Gaps of Halide Perovskites from a {{Wannier-localized}} Optimally Tuned Screened Range-Separated Hybrid Functional},
  author = {Ohad, Guy and Wing, Dahvyd and Gant, Stephen E. and Cohen, Ayala V. and Haber, Jonah B. and Sagredo, Francisca and Filip, Marina R. and Neaton, Jeffrey B. and Kronik, Leeor},
  year = {2022},
